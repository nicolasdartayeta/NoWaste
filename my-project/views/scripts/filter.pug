script.
    function filterItems(filter) {
        console.log(filter)
        if (filter == 'all') {
            filter = '';
        }

        const elementos = document.getElementsByClassName('filterable-item');
        for (let i = 0; i < elementos.length; i++) {
            removeClass(elementos[i], 'hidden'); // muestra todos los elementos
            //- console.log(elementos[i].querySelector('.tipoProducto').innerHTML)
            if (filter != '' && !elementos[i].querySelector('.tipoProducto').innerHTML.includes(`Tipo: ${filter}`)) {
                //- console.log(elementos[i].querySelector('.tipoProducto').innerHTML)
                addClass(elementos[i], 'hidden'); // oculta los elementos que coincidan con el filtro
            }
        }
    }
    function addClass(element, classToAdd) {
        var i, arr1, arr2;
        arr1 = element.className.split(" ");
        arr2 = classToAdd.split(" ");
        for (i = 0; i < arr2.length; i++) {
            if (arr1.indexOf(arr2[i]) == -1) {
            element.className += " " + arr2[i];
            }
        }
    }
    function removeClass(element, classToRemove) {
        var i, arr1, arr2;
        arr1 = element.className.split(" ");
        arr2 = classToRemove.split(" ");
        for (i = 0; i < arr2.length; i++) {
            while (arr1.indexOf(arr2[i]) > -1) {
            arr1.splice(arr1.indexOf(arr2[i]), 1);
            }
        }
        element.className = arr1.join(" ");
    }