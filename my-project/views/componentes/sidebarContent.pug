mixin item(item)
    li(id=item.id)
        div(class="w-full flex justify-center items-center text-center rounded-lg px-4 py-2 text-sm font-medium bg-gray-100/50 hover:bg-gray-100 hover:text-gray-700")
            button(hx-get=item.requestURL hx-target=item.target hx-push-url='true' class="w-full")=item.title 
            if (item.deletable == "true")
                button(hx-delete=item.requestURL hx-target="closest li" class="flex justify-center items-center text-center rounded-lg px-4 py-2 text-sm font-medium bg-red-100/50 hover:bg-red-100 hover:text-red-700")
                    svg(xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16")

p(class='text-lg mt-2 text-center')=sidebar.title 

ul(class="mt-3 space-y-1 flex flex-col w-full")
    each item in sidebar.items
        +item(item)
