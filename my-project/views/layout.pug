doctype html
html
  head
    title NoWaste
    link(rel='stylesheet', href='/static/stylesheets/outputTailwind.css')
    //no saquen estos estilos porque se usan para el carrusel
    link(rel='stylesheet', href='/static/stylesheets/styleRestaurante.css')
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css")
    link(rel="icon" type="image/png" sizes="32x32" href="/static/icons/favicon-32x32.png")
    script(src="https://cdn.jsdelivr.net/npm/flatpickr")
    script(src="https://unpkg.com/htmx.org@1.8.4")
    script.
      function checkContent(restauranteId) {
        //document.getElementById(restauranteId).remove();
        document.getElementById('content').innerHTML = "<p>Restaurante eliminado !!</p>"
      }
      function limpiarContent() {
        document.getElementById('content').innerHTML = "<p>Elegi un restaurante!</p>"
      }
    block head
  body
    div(class='flex flex-col h-screen w-screen overflow-auto')
      include componentes/header.pug
      div(class='flex h-full w-full flex-row overflow-hidden')
        div(id='sidebar' class='bg-green-900/30 flex h-full w-64 flex-col justify-start px-4 py-6 overflow-y-auto')
          block sidebar

        div(id='content' class='bg-green-900/10 flex h-full w-full flex-col justify-start px-4 py-6 overflow-y-auto shadow-inner')
          block content