html
  head
    title Register
    link(rel='stylesheet', href='/static/stylesheets/outputTailwind.css')
    script(src="https://unpkg.com/htmx.org@1.8.4")

  body(class='flex justify-center text-center items-center min-h-screen bg-gray-100')
    div(class='bg-customGray p-8 rounded-2xl shadow-2xl')
      img(src="/static/icons/logo.png", class="w-80 h-auto px-3 py-8")
      div
        form(action="/login/register", method="post")
          div(class=" space-y-2")
            div
              label(for='email' class='block text-left font-semibold py-1') Email
              input(type='email', pattern="[^ @]*@[^ @]*", placeholder='Ingrese e-mail' name='email' required class='w-full px-3 py-2 border rounded-lg')
            div
              label(for='username' class='block text-left font-semibold py-1') Usuario
              input(type='text', placeholder='Ingrese Usuario' name='username' required class='w-full px-3 py-2 border rounded-lg')
            div
              label(for='password' class='block text-left font-semibold py-1') Contrase単a
              input(type='password', placeholder='Ingrese Contrase単a' name='password' required class='w-full px-3 py-2 border rounded-lg')
            div
              label(for='confirm_password' class='block text-left font-semibold py-1') Confirmar Contrase単a
              input(type='password', placeholder='Ingrese Contrase単a' name='confirm_password' required class='w-full px-3 py-2 border rounded-lg')
          div(class='flex space-x-4 justify-center mt-4')
            button(type='submit' class='btn btn-primary px-4 py-2 bg-customGreen text-white rounded-lg w-full') Registrar
            button(type='button', onclick="window.location.href='/login'" class='btn btn-primary px-4 py-2 bg-gray-200 border border-customGreen text-customGreen rounded-lg w-full') Volver a Login