div(id=datos._id)
    h2= nombre 
    if datos.imagen 
        img(src='/static/images/'+datos._id+'.jpg')
    if datos.length != 0
        ul 
            each dato, atributo in datos
                if (atributo != 'imagen')
                    li #{atributo}: #{dato}
            if (datos.producto.length != 0)
                h3 Productos
                ul.listaProductos(style="margin-top: 20px;")
                    each producto in datos.producto
                        li.producto
                            each valor, atributo in producto
                                if (atributo != 'imagenesProducto')
                                    p #{atributo}: #{valor}
                                        if (atributo == 'nombre')
                                            button(hx-get="/restaurantes/"+datos._id+"/editProduct" hx-vals=`{"nombreProducto":"${valor}"}` hx-target="#content") edit
                                            button(hx-delete="/restaurantes/"+datos._id+"/deleteProduct/"+valor hx-target="#content") delete
                                        //prodcuto tiene _id???
                                else  
                                    .slider
                                        button#btn-derecha() derecha
                                        button#btn-izquierda() izquierda
                                        .slides
                                                each imagen in valor
                                                    .slide
                                                        img#img-producto(src='/static/images/'+imagen.id onerror="this.remove()")
                                                        
            else 
                p Este restaurante no tiene productos
    else 
        p No hay datos

    button(hx-get="/restaurantes/"+datos._id+"/addProduct" hx-target="#content") Agregar Producto
