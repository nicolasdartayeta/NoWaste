extends ../layout

block content
  h1 Agregar restaurante
  form(action="/restaurantes/add", method="post") 
    div.form-group
      label(for='nombre') Nombre:
      input#nombre.form-control(type='text', placeholder='Nombre' name='nombre' required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
  