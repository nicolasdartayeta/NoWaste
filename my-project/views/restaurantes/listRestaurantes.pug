extends ../layout

block sidebar 
    p=title 
    if restaurantesList.length 
        ul 
            each restaurante in restaurantesList
                li 
                    a(hx-get='/restaurantes/show/' + restaurante.id hx-target="#content" hx-push-url='true') #{restaurante.nombre}
    else 
        p No hay restaurantes

    button(onclick="window.location.href='/'") Ir a la pÃ¡gina principal

block content
    case action 
        when 'detail'
            include restauranteDetail.pug
        default 
            p Elegi un restaurante!